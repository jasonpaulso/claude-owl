{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Node.js environment for Electron main process
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": false,

    // Output configuration
    "rootDir": "src",
    "outDir": "dist",

    // Path aliases for main process
    "baseUrl": ".",
    "paths": {
      "@/main/*": ["src/main/*"],
      "@/shared/*": ["src/shared/*"],
      "@/*": ["src/*"]
    },

    // No JSX in main process
    "jsx": "preserve"
  },
  "include": ["src/main/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/preload"]
}
