{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Preload scripts run in both Node.js and browser contexts
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Output configuration
    "rootDir": "src",
    "outDir": "dist",

    // No JSX in preload scripts
    "jsx": "preserve",

    // Path Aliases (must be explicitly defined here for preload config)
    "baseUrl": ".",
    "paths": {
      "@/main/*": ["src/main/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/preload/*": ["src/preload/*"],
      "@/shared/*": ["src/shared/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/preload/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/main", "src/renderer"]
}
